<%= link_to 'Next Question', new_question_path %>
<!-- just some indenting suggestions on this page -->

<% if @question.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@question.errors.count, "error") %> prohibited
        this question from being saved:
      </h2>
      <ul>
        <% @question.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<% if @last_viewed_question %>
<h3>Last viewed question: <%= @last_viewed_question.name %></h3>
<% end %>

<%= form_for(@question) do |f| %>
  <p>
    <%= f.label :question %>
    <%= f.text_field :body %>
  </p>

  <%= simple_form_for @question do |f| %>
    <%= f.input :color, as: :minicolors %>

    <p>
      <%= f.submit "illuminate" %>
    </p>
  <% end %>
<% end %>

<%= link_to 'Back', questions_path %>
